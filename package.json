{
  "name": "grathsql-mongo-react",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "14.x",
    "npm": "6.14.11"
  },
  "scripts": {
    "server": "nodemon server/index.ts",
    "build:server": "rimraf serve &&  tsc -p ./",
    "seed": "ts-node server/temp/seed.ts",
    "dev": "cross-env NODE_ENV=development webpack serve --mode development",
    "build:prod": "rimraf build && cross-env NODE_ENV=production webpack --mode production",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "prod:build": "concurrently \"npm run build:server\" \"npm run build:prod\"",
    "prod:server": "wait-on serve && node serve",
    "prod:client": "wait-on build && node index.js",
    "prod": "npm-run-all  --print-label --parallel prod:*",
    "codegen:schema": "npx apollo client:download-schema --endpoint=http://localhost:9000/api",
    "codegen:generate": "npx apollo client:codegen --localSchemaFile=schema.json --includes=client/**/*.tsx --target=typescript",
    "lint:style": "stylelint --fix ./client/**/*.css",
    "lint:ts": "eslint . --ext .ts,tsx",
    "pre-commit": "npm-run-all lint:*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "keywords": [
    "GraphQL",
    "MongoDB",
    "React",
    "Typescript"
  ],
  "author": "Badreeva Inna",
  "license": "ISC",
  "browserslist": [
    "> 1%",
    "last 3 ie versions"
  ],
  "dependencies": {
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.4",
    "apollo-boost": "^0.4.9",
    "apollo-server-express": "^2.24.0",
    "body-parser": "^1.19.0",
    "concurrently": "^6.1.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "graphql": "^15.5.0",
    "lodash.merge": "^4.6.2",
    "mongodb": "^3.6.6",
    "postcss-cssnext": "^3.1.0",
    "react": "^17.0.2",
    "react-apollo": "^3.1.5",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/graphql": "^14.5.0",
    "@types/lodash.merge": "^4.6.6",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "cross-env": "^7.0.3",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^2.5.4",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^6.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^5.2.0",
    "postcss-nested": "^5.0.5",
    "precss": "^4.0.0",
    "prettier": "^2.3.0",
    "sass-loader": "^11.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-loader": "^9.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "webpackbar": "^5.0.0-3"
  }
}
