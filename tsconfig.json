{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "outDir": "./serve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
       "@server/*": ["./server/*"], // когда будет настроен webpac
      "@/*": [
        "./client/*"
      ]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"],
    "jsx": "react"
  },
  "include": [
    "server",
    "client",
    "./node_modules/@types"
  ],
  "exclude": ["node_modules", "**/*.js"]
}
